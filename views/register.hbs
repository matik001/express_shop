{{#section 'head'}}
<style>
    .register-card {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
        background-color: white;
        padding: 100px;
        padding-top: 40px;
        padding-bottom: 40px;
        max-width: 700px;
    }
</style>
{{/section}}

<div class="register-card">
    <h4 class="card-title mt-3 text-center">Create Account</h4>
    <p class="text-center">Get started with your free account</p>
    <article class="card-body mx-auto pb-0" style="width: 400px;">
        <form class="login-form" action="/register" method="POST">

            <input type="hidden" name="_csrf" value="{{csrfToken}}">

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input name="fullname" class="form-control {{#if errors.fullname}}is-invalid{{/if}}"
                    placeholder="Full name" type="text" value="{{oldInput.fullname}}" required>
                {{#if errors.fullname}}
                <div class="invalid-feedback">
                    {{errors.fullname}}
                </div>
                {{/if}}
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}"
                    placeholder="Email address" type="email" value="{{oldInput.email}}" required>
                {{#if errors.email}}
                <div class="invalid-feedback">
                    {{errors.email}}
                </div>
                {{/if}}
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}"
                    placeholder="Create password" type="password" value="{{oldInput.password}}" required>
                {{#if errors.password}}
                <div class="invalid-feedback">
                    {{errors.password}}
                </div>
                {{/if}}
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input name="confirmPassword" class="form-control {{#if errors.confirmPassword}}is-invalid{{/if}}"
                    placeholder="Repeat password" type="password" value="{{oldInput.confirmPassword}}" required>
                {{#if errors.confirmPassword}}
                <div class="invalid-feedback">
                    {{errors.confirmPassword}}
                </div>
                {{/if}}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> Create Account </button>
            </div>

            <p class="text-center">Have an account? <a href="/login">Log In</a> </p>
        </form>
    </article>
</div>
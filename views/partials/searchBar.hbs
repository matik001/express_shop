<form method="get">
    <div class="input-group ml-auto mr-auto" style="width: 50%; margin-top: 20px;">
        <input class="form-control border-end-0 border rounded-pill" name="phrase" type="text" placeholder="search" value="{{phrase}}">
        <span class="input-group-append">
            <button class="btn btn-outline-secondary bg-white border-start-0 border rounded-pill ms-n3" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
</form>
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="{{imageUrl}}" style="height: 200px">
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}.</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: {{formatPrice price}}</li>
    </ul>
    <div class="card-body mr-auto ml-auto">
        <form action="/add-to-cart/{{id}}" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-cart-plus"></i>
                Add
            </button>
        </form>
    </div>
    <div class="card-footer">
        <p class="card-text"><small class="text-muted">Owner: {{owner.fullname}}</small></p>
    </div>
</div>


    